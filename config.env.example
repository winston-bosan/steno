# ABOUTME: Configuration file for voice-to-text script
# ABOUTME: Copy this to config.env and set your values

# API Configuration
# For Parakeet-TDT (local): http://localhost:8000/transcribe
# For OpenAI: https://api.openai.com/v1/audio/transcriptions
API_ENDPOINT="http://localhost:8000/transcribe"

# API Key (leave empty for local Parakeet-TDT, required for OpenAI)
API_KEY=""

# API request timeout in seconds
API_TIMEOUT=30

# Audio recording settings
SAMPLE_RATE=16000
AUDIO_FORMAT=wav

# Optional: Include timestamps in transcription (for Parakeet-TDT)
INCLUDE_TIMESTAMPS=false

# Optional: Enable chunking for better transcription (for Parakeet-TDT)
SHOULD_CHUNK=true